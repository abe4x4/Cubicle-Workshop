
    <main>
      <h1>{{cube.name}}</h1>
      <img class="cube" src={{cube.imageUrl}}>
      <div class="details">
        <p><span>Description:</span> {{cube.description}}</p>
        <p><span>Difficulty level:</span>{{cube.difficulty}}</p>
        <div align="center">
          <a class="btn" href="/">Back</a>
          <a class="btn" href="/attach/accessory/{{cube._id}}">Attach Accessory</a><br>
            <a class="btn" href="/edit/{{cube._id}}">Edit</a>
            <a class="btn" href="/delete/{{cube._id}}">Delete</a>
            </div>
      </div>
     
<h2>Accessories</h2>
<div class="accessories">
    {{#each accessories}}
        <div class="accessory">
            <img src={{imageUrl}} alt={{name}}>
            <h3>{{name}}</h3>
            <p>{{description}}</p>
        </div>
    {{else}}
        <h3 class="italic">This cube has no accessories yet...</h3>
    {{/each}}
</div>
    </main>
 